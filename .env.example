# --- SanctifAi Bolt Environment ---

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# AI & Media APIs
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
TMDB_API_KEY=your_tmdb_bearer_token_here
SESSION_SECRET=your_session_secret_here

# Lyrics Settings
# Provider options: none | manual | lyricsovh | musixmatch
# - none: Disables automatic lyrics fetching (default)
# - manual: User provides lyrics manually (no API calls)
# - lyricsovh: Free API, no authentication required
# - musixmatch: Requires LYRICS_API_KEY (https://developer.musixmatch.com/)
LYRICS_PROVIDER=none

# API key for lyrics provider (only required for musixmatch)
# Leave empty for lyricsovh (free, no key needed)
LYRICS_API_KEY=

# Days to cache lyrics in database (default: 90)
LYRICS_CACHE_TTL_DAYS=90

# Client (Vite)
VITE_BASE_URL=http://localhost:5000
VITE_SCRIPTURE_API_BASE=https://bible.helloao.org

# Supabase (Auto-configured in Bolt.new)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
